number_1 = int(input("Enter first number: "))
action = input("Enter your action(+-/*): ")
number_2 = int(input("Enter second number: "))

if number_2 == 0 and action == "/":
    number_2 = int(input("Dividing by 0 is not possible, please enter second number: "))

if action == "/" :
    result = number_1 / number_2
    print(result)

if action == "+":
    result = number_1 + number_2
    print(result)

if action == "-":
    result = number_1 - number_2
    print(result)

if action == "*":
    result = number_1 * number_2
    print(result)
